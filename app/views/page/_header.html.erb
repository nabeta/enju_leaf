<div class="row">
  <div class="col-md-8" id="header_left">
    <h1 class="resource_title">
      <%= link_to image_tag(library_group_path(@library_group, format: :download), style: 'margin-left: 20px; vertical-align: middle', alt: LibraryGroup.system_name(@locale), size: @library_group.header_logo.image_size(:medium)), root_path if @library_group.header_logo.exists? %>
      <%= link_to LibraryGroup.system_name(@locale), root_path, title: LibraryGroup.system_name(@locale) %>
    </h1>
  </div>

  <div class="col d-flex align-items-center" id="header_right">
    <%= render 'page/select_locale' -%>
  </div>
</div>
